{
  "name": "beon-referral-program",
  "version": "1.0.0",
  "description": "Web App Widget to embed Beon's referral program inside the internal Google site",
  "license": "MIT",
  "scripts": {
    "glogin": "clasp login",
    "gcreate": "clasp create --title 'BEON Referral Program Web App' --rootDir ./google-apps-scripts",
    "gpull": "clasp pull",
    "gpush": "clasp push",
    "gstart": "clasp push --watch",
    "gbuild": "yarn build & yarn gpush",
    "dev": "parcel ./src/index.html --dist-dir ./public",
    "build": "parcel build ./src/index.html --dist-dir ./google-apps-scripts"
  },
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@parcel/transformer-sass": "2.9.1",
    "@types/google-apps-script": "^1.0.64",
    "parcel": "^2.9.1",
    "process": "^0.11.10"
  },
  "dependencies": {
    "js-base64": "^3.7.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
